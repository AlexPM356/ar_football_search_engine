<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/sheet.css">
    <link rel="stylesheet" href="/styles/dropdown.css">
    <link rel="stylesheet" href="/styles/search_bar.css">
    <link rel="stylesheet" href="/styles/table.css">
    <title><%= country %> <%= countryYear %></title>
</head>
<body>
    <div class="navbar">
        <ul class="nb-dropdown-ul">
          <li class="nb-dropdown-li"><a href="/">HOME</a></li>
          <li class="dropdown">
            <a href="/api/world_cup" class="dropbtn">WORLD CUP</a>
            <div class="dropdown-content">
              <a href="#">another</a>
            </div>
          </li>
        </ul>
        <form onsubmit="event.preventDefault();" role="search">
          <label for="search">Search for stuff</label>
          <input id="search" type="search" placeholder="Search..." autofocus required />
          <button type="submit">Go</button>    
        </form>
      </div>
    <!--===============================================================================-->
    <div class="mc-wc-country">
      <h1 class="title-content"><%= country %> <%= countryYear %></h1>
        <table class="container">
            <thead>
              <tr>
                <th><h1>PLAYER</h1></th>
                <th><h1>SHIRT NUMBER</h1></th>
                <th><h1>POSITION</h1></th>
            </tr>
            </thead>
            <% for (let i = 0; i < players.length; i++) { %>
            <tbody>
              <tr>
                <td><a href="/api/<%= country %>/<%= players[i].player_name %>">
                    <%= players[i].player_name %></a></td>
                <td><%= players[i].shirt_number %></td>
                <td><%= players[i].player_position %></td>
              </tr>
              <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>